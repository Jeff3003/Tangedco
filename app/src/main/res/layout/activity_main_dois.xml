<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundoazul"
    tools:context=".MainActivityDois">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="90dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/tangedco" />

    <EditText
        android:id="@+id/edtLoginUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:hint="UsuÃ¡rio"
        android:inputType="textPersonName"
        android:drawableEnd="@drawable/user"
        android:textColorHint="#fff"
        android:padding="20sp"/>

    <EditText
        android:id="@+id/edtLoginSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:hint="Senha"
        android:inputType="textPersonName"
        android:drawableEnd="@drawable/senha"
        android:textColorHint="#fff"
        android:padding="20sp"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:hint="Esqueceu a senha ?"
        android:textColorHint="#fff"
        android:layout_marginHorizontal="130dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:backgroundTint="#CD3755"
        android:paddingBottom="10dp"
        android:layout_marginTop="180dp"/>


</LinearLayout>